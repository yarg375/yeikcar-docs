---
import type { Props } from '@astrojs/starlight/props';

// Detectar el idioma basado en la URL actual
const currentPath = Astro.url.pathname;
const isSpanish = currentPath.startsWith('/es');
const siteUrl = isSpanish ? 'https://yeikcar.com/es' : 'https://yeikcar.com/en';
const docsUrl = isSpanish ? '/es/' : '/en/';
const title = isSpanish ? 'Docs' : 'Docs';
---

<div class="site-title">
	<a href={siteUrl} class="logo-link">
		<img
			class="logo"
			src="/src/assets/logo/logo.svg"
			alt="YeikCar"
		/>
	</a>
	<a href={docsUrl} class="title-link">
		<span class="title">{title}</span>
	</a>
</div>

<style>
	.site-title {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.logo-link {
		text-decoration: none;
		color: var(--sl-color-text-accent);
	}
	.logo-link:hover {
		color: var(--sl-color-text-accent);
	}
	.logo {
		width: auto;
		height: 40px;
	}
	:global([data-theme='dark']) .logo {
		content: url('/src/assets/logo/logo-white.svg');
	}
	.title-link {
		text-decoration: none;
		color: inherit;
	}
	.title-link:hover {
		color: var(--sl-color-text-accent);
	}
	.title {
		font-size: var(--sl-text-h4);
		font-weight: 600;
		line-height: var(--sl-line-height-headings);
		color: inherit;
	}
</style>
